<language id="EN" name="English">
	<template id="T" name="Temperature">
		<case id="1">
			<part>
				<static>The temperatures</static>
                    <space/>
                    <static>will be</static>
                    <space/>
				<option id="1">
					<variable id="norT"></variable>
					<space/>
					<static>for this period of the year,</static>
				</option>
				<option id="2">
					<variable id="minT"></variable>
					<space/>
					<static>for the minimums and</static>
					<space/>
					<variable id="maxT"></variable>
					<space/>				
					<static>for the maximums compared
                        to the expected for this time of the year,
                    </static>
				</option>
				<space/>
			</part>
			<part>
                <option id="3">
                <static>which globally will be</static>
                <space/>
					<variable id="norV"></variable>
                </option>
				<option id="4">
                    <space/>
                    <static>although they</static>
                    <space/>
                    <variable id="norO"></variable>
				</option>
                <option id="5">
					<static>with minimums</static>
                    <space/>
                    <variable id="minV"></variable>
                </option>
				<option id="6">
                    <space/>
                    <static>although they</static>
                    <space/>
                    <variable id="minO"></variable>
                </option>
                <option id="7">
                    <space/>
                    <static>and maximums</static>
                    <space/>
                    <variable id="maxV"></variable>
                </option>
                <option id="8">
                    <static>, despite they</static>
                    <space/>
                    <variable id="maxO"></variable>
                </option>
                <static>.</static>
			</part>
		</case>
	</template>

    <template id="C1" name="Cobertura Nivel 1">
		<case id="1">
			<part>
				<static>There will be</static>
				<space/>
				<variable id="cl1"></variable>
				<space/>
                <static>skies</static>
                <space/>
                        <option id="1">
                            <period id="p1"/>
                            <static>,</static>
                            <space/>
                            <variable id="cl2"></variable>
                            <space/>
                            <period id="p2"/>
                            <space/>
                            <static>and</static>
                            <space/>
                            <variable id="cl3"></variable>
                            <space/>
                            <period id="p3"/>
                            <space/>
                            <static>of this term</static>
                        </option>
				<option id="2">
                            <static>in general during the whole period</static>
				</option>
				<static>.</static>
			</part>
		</case>
		<case id="2">
			<part>
				<static>There will be</static>
				<space/>
				<variable id="cl4"></variable>
				<space/>
                <static>skies</static>
                <space/>
				<period id="p4"/>
				<space/>
                        <option id="3">
                            <static>and</static>
                            <space/>
                            <period id="p5"/>
                            <space/>
                        </option>
				<static>of the term, although</static>
				<space/>
				<period id="p6"/>
				<space/>
                        <option id="4">
                            <static>and</static>
                            <space/>
                            <period id="p7"/>
                            <space/>
                        </option>
				<static>they will be</static>
				<space/>
				<variable id="cl5"></variable>
				<static>.</static>
			</part>
		</case>
	</template>

    <template id="C2" name="Cobertura Nivel 2">
        <case id="1">
            <part>
                <variable id="pred1"/>
                <space/>
                <static>skies in general for the next days</static>
                <option id="1">
                    <static>, although they will occasionally be</static>
                    <space/>
                    <variable id="pred2"/>
                </option>
                <static>.</static>
            </part>
        </case>
        <case id="2">
            <part>
                <static>We expect an alternance of</static>
                <space/>
                <variable id="rel1"/>
                <space/>
                <static>sky periods with others</static>
                <space/>
                <variable id="rel2"/>
                <space/>
                <static>for the next days</static>
                <option id="2">
                    <static>, although they will occasionally be</static>
                    <space/>
                    <variable id="rel3"/>
                </option>
                <static>.</static>
            </part>
        </case>
        <case id="3">
            <part>
                <static>There will be</static>
                <space/>
                <variable id="rel4"/>
                <space/>
                <static>skies with</static>
                <space/>
                <variable id="rel5"/>
                <option id="3">
                    <space/>
                    <static>or</static>
                    <space/>
                    <variable id="rel6"/>
                </option>
                <space/>
                <static>moments</static>
                <static>.</static>
            </part>
        </case>
        <case id="4">
            <part>
                <static>The sky state will be very variable for the whole term.</static>
            </part>
        </case>
    </template>
	
