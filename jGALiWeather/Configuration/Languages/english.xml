    	<label name="this">this</label>
	</labelset>

    <template id="C2" name="Cobertura Nivel 2">
        <case id="1">
            <part>
                <variable id="pred1"/>
                <space/>
                <static>skies in general for the next days</static>
                <option id="1">
                    <static>, although they will occasionally be</static>
                    <space/>
                    <variable id="pred2"/>
                </option>
                <static>.</static>
            </part>
        </case>
        <case id="2">
            <part>
                <static>We expect an alternance of</static>
                <space/>
                <variable id="rel1"/>
                <space/>
                <static>sky periods with others</static>
                <space/>
                <variable id="rel2"/>
                <space/>
                <static>for the next days</static>
                <option id="2">
                    <static>, although they will occasionally be</static>
                    <space/>
                    <variable id="rel3"/>
                </option>
                <static>.</static>
            </part>
        </case>
        <case id="3">
            <part>
                <static>There will be</static>
                <space/>
                <variable id="rel4"/>
                <space/>
                <static>skies with</static>
                <space/>
                <variable id="rel5"/>
                <option id="3">
                    <space/>
                    <static>or</static>
                    <space/>
                    <variable id="rel6"/>
                </option>
                <space/>
                <static>moments</static>
                <static>.</static>
            </part>
        </case>
        <case id="4">
            <part>
                <static>The sky state will be very variable for the whole term.</static>
            </part>
        </case>
    </template>
	
