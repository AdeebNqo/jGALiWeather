<?xml version="1.0" encoding="UTF-8"?>
<language id="EN" name="English">
	<template id="T" name="Temperature">
		<case id="1">
			<part>
				<static>The temperatures</static>
                    <space/>
                    <static>will be</static>
                    <space/>
				<option id="1">
					<variable id="norT"></variable>
					<space/>
					<static>for this period of the year,</static>
				</option>
				<option id="2">
					<variable id="minT"></variable>
					<space/>
					<static>for the minimums and</static>
					<space/>
					<variable id="maxT"></variable>
					<space/>				
					<static>for the maximums compared
                        to the expected for this time of the year,
                    </static>
				</option>
				<space/>
			</part>
			<part>
                <option id="3">
                <static>which globally will be</static>
                <space/>
					<variable id="norV"></variable>
                </option>
				<option id="4">
                    <space/>
                    <static>although they</static>
                    <space/>
                    <variable id="norO"></variable>
				</option>
                <option id="5">
					<static>with minimums</static>
                    <space/>
                    <variable id="minV"></variable>
                </option>
				<option id="6">
                    <space/>
                    <static>although they</static>
                    <space/>
                    <variable id="minO"></variable>
                </option>
                <option id="7">
                    <space/>
                    <static>and maximums</static>
                    <space/>
                    <variable id="maxV"></variable>
                </option>
                <option id="8">
                    <static>, despite they</static>
                    <space/>
                    <variable id="maxO"></variable>
                </option>
                <static>.</static>
			</part>
		</case>
	</template>

    <labelset id="C1" name="Cobertura Nivel 1">
    	<label name="subject">there</label>
    	<label name="verb">be</label>
